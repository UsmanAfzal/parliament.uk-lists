%figure.avatar--round
  = link_to(media_show_path(image_id), aria: { hidden: "true" }, tabindex: "-1") do
    %picture
      - if image_id != "placeholder"
        %img{ src: "#{ENV['IMAGE_SERVICE_URL']}/#{image_id}.jpeg?crop=CU_1:1&width=186&quality=80", alt: "#{person_name}" }
      - else
        %img{ src: "#{Pugin::ASSET_LOCATION_URL}/#{Pugin::ASSET_VERSION}/images/placeholder_members_image.png", alt: "" }
